# Enterprise Cloud Cost Analyzer - Environment Configuration

# Application Settings
APP_NAME=Enterprise Cloud Cost Analyzer
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/cloud_cost_analyzer_enterprise
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ClickHouse Configuration (Analytics)
CLICKHOUSE_URL=clickhouse://clickhouse:9000
CLICKHOUSE_DATABASE=cost_analytics

# ElasticSearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=cost_analyzer

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
ENCRYPTION_KEY=your-encryption-key-change-in-production-32chars

# Cloud Provider Credentials (Optional for demo)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1

AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-secret
AZURE_TENANT_ID=your-azure-tenant

GCP_SERVICE_ACCOUNT_JSON=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project

ALIBABA_ACCESS_KEY_ID=your-alibaba-key
ALIBABA_ACCESS_KEY_SECRET=your-alibaba-secret
ALIBABA_REGION=cn-hangzhou

TENCENT_SECRET_ID=your-tencent-id
TENCENT_SECRET_KEY=your-tencent-key
TENCENT_REGION=ap-beijing

# Feature Flags
ENABLE_UNIT_ECONOMICS=true
ENABLE_FORECASTING=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTOMATED_OPTIMIZATION=true
ENABLE_KUBERNETES_TRACKING=true

# Notification Settings (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
TEAMS_WEBHOOK_URL=https://outlook.office.com/your/webhook/url

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO